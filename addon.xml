<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nba"
       name="NBA League Pass"
       version="0.6.1"
       provider-name="ptsampoukas, robla and maxgalbu">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.httplib2" version="0.7.1"/>
    <import addon="script.common.plugin.cache" version="0.9.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="leaguepass.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Watch NBA League Pass games.</summary>
    <description>Features: Archive and condensed games for the NBA 2012 and 2013 seasons. Selection of video qualities (from 720p to 360p). Fanart and thumbnails. Requires a subscription and httplib2 for xbmc. Homepage: https://bitbucket.org/maxgalbu/plugin.video.nba/overview</description>
  </extension>
</addon>
